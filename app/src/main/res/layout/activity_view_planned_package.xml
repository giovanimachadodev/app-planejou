<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Secundary"
        tools:context=".ViewPlannedPackageActivity">

    <TextView
            android:text="Finlândia - Helsinque"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView10"/>


    <TextView
            android:lineSpacingExtra="15dp"
            android:text=
                    "Hotel: Artic - R$ 500,00 \nLocação: Localiza - R$ 100,00
                     \nPassagens: R$ 400,00 \nPeríodo: 3 dias"
            android:paddingTop="250dp"
            android:paddingHorizontal="30dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/shape_stroke"
            android:id="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"/>


    <Button
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:text="Serviços adicionais"
            android:textAllCaps="false"
            android:background="@drawable/shape"
            android:layout_width="318dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            android:layout_marginBottom="25dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            android:id="@+id/button3"/>


    <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/finlandia"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            android:id="@+id/imageView5"/>

    <ImageView
            android:layout_marginHorizontal="40dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_eye"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            android:layout_marginEnd="24dp"/>

    <ImageView
            android:backgroundTint="@color/Primary"
            android:layout_marginHorizontal="40dp"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:background="@drawable/ic_street_view"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"/>

    <ImageView
            android:backgroundTint="@color/Primary"
            android:layout_marginHorizontal="40dp"
            android:layout_width="44dp"
            android:layout_height="39dp"
            android:background="@drawable/ic_som"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"/>
    <TextView

            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:text="R$ 1.000,00"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:layout_marginStart="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>