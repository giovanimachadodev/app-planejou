                    app:layout_constraintHorizontal_bias="0.074" app:layout_constraintVertical_bias="0.485"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="start"
