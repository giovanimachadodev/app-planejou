<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailedOffer">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/Secundary"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginStart="34dp"
                android:textColor="@color/White"
                android:textSize="24sp"
                tools:text="Finlândia - Helsinque "
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="41dp"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="37dp"
                android:background="@color/White"
                android:paddingHorizontal="25dp"
                android:orientation="vertical"
        >

            <ImageView
                    android:layout_marginTop="23.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="203dp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:textAlignment="center"
                    tools:text="Veja o entorno clicando aqui"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="18dp"
                    tools:text="Hotel: Labore - R$ 500,00\nLocação: Localiza - R$ 100,00\nPassagens: R$ 400,00\nDias: 3 dias\n\nSegue os protocolos da covid\n\nR$ 1.000,00"
            />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:textAllCaps="false"
                    android:background="@color/Primary"
                    tools:text="Comprar passagem"
            />




        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>