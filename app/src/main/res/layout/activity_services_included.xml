<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Secundary"
        tools:context=".ServicesIncludedActivity">



    <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Secundary"
            android:layout_margin="30dp">

    <CheckBox
            android:scaleX="1.8"
            android:scaleY="1.8"
            android:checked="true"
            android:paddingRight="20dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/checkBox2"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            android:layout_marginBottom="108dp"/>

    <TextView

            android:text="Serviços inclusos"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="96dp"
            android:background="@drawable/shape_stroke"
            android:lineSpacingExtra="20dp"
            android:padding="30dp"
            android:text=
                "Passagem \nHotel
                     \nLocação de veículo"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
        <CheckBox
            android:scaleX="1.8"
            android:scaleY="1.8"
            android:checked="true"
            android:paddingRight="20dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/checkBox5"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            android:layout_marginBottom="20dp"/>
    <CheckBox
            android:scaleX="1.8"
            android:scaleY="1.8"
            android:checked="true"
            android:paddingRight="20dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/checkBox3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            android:layout_marginBottom="64dp"/>
    <CheckBox
            android:scaleX="1.8"
            android:scaleY="1.8"
            android:checked="true"
            android:paddingRight="20dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/checkBox"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            android:layout_marginBottom="108dp"/>
    <TextView
            android:text="Serviços adicionais"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            android:layout_marginBottom="16dp"/>
    <TextView

            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/shape_stroke"
            android:id="@+id/textView3"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"/>
    <Button
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:text="Comprar pacote"
            android:textAllCaps="false"
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:id="@+id/btnComprarPacote"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/additionaList"
            android:layout_height="200dp"
            android:layout_width="350dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>