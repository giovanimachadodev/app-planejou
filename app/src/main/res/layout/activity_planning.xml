<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Planning">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/Secundary"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginStart="34dp"
                android:textColor="@color/White"
                android:textSize="24sp"
                tools:text="Planeje a sua passagem "
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="41dp"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="37dp"
                android:background="@color/White"
                android:paddingHorizontal="25dp"
                android:orientation="vertical"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"

                    tools:text="Destino"
            />
            
            <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_height="35dp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    tools:text="Local de Embarque"
            />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_height="35dp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    tools:text="Período"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
            >
                <EditText
                        android:layout_width="155dp"
                        android:layout_height="35dp"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        tools:hint="Ida 26/03/20"
                />

                <EditText
                        android:layout_width="155dp"
                        android:layout_height="35dp"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        tools:hint="Ida 26/03/20"
                />

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    tools:text="Hospedagem"
            />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_height="35dp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal"
            >
               <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="Trajeto"
               />

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="13dp"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Orçamento"
                />

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="13dp"
                />

            </LinearLayout>
            
            <Button
                    android:layout_width="match_parent"
                    android:layout_marginTop="33dp"
                    android:layout_height="43dp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:background="@color/Primary"
                    tools:text="Pesquisar Ofertas"
            />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>