<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planning">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Secundary"
        android:orientation="vertical"
        android:paddingHorizontal="21dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="35dp"
            android:text="Planeje a sua viagem "
            android:textColor="@color/White"
            android:textSize="28sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="41dp"
            android:layout_marginBottom="37dp"
            android:background="@drawable/shape_stroke2"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingBottom="20dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:textSize="20sp"
                android:text="Local de embarque"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_stroke">

                <EditText
                    android:layout_width="245dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:hint="ex: São Paulo"
                    android:textSize="14sp" />

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/Primary"
                    android:src="@drawable/ic_microfone_de_teatro" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Destino"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_stroke"

                >

                <EditText
                    android:layout_width="245dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:hint="ex: Rio de Janeiro"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_microfone_de_teatro" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:textSize="20sp"
                android:text="Destino"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="125dp"

                    android:layout_height="35dp"
                    android:background="@drawable/shape_stroke"
                    android:hint="Ida 26/03/20"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="125dp"

                    android:layout_height="35dp"
                    android:background="@drawable/shape_stroke"
                    android:hint="Ida 26/03/20"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_microfone_de_teatro" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:text="Orçamento"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_stroke"
                android:orientation="horizontal"

                >

                <EditText
                    android:layout_width="245dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:hint="ex: R$ 2000,00"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_microfone_de_teatro" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_ofertas"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shape"
                android:text="Pesquisar Ofertas"
                android:textAllCaps="false"


                android:textColor="#FFFFFF"
                android:textSize="24sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>